meta {
  name: Create a new Tenant
  type: http
  seq: 3
}

post {
  url: {{tmBaseUrl}}/api/v1alpha1/tenants
  body: json
  auth: inherit
}

body:json {
  {
    "properties": {
      "name": "{{participant_name}} tenant",
      "location": "eu"
    },
    "id":"foobar"
  }
}

script:post-response {
  let body = res.getBody()
  test("Response contains id", function () {
      expect(body).to.have.property("id");
  });
  
  if (body && body.id) {
      bru.setVar("tenant_id", body.id);
  } 
}

